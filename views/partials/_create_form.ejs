      <div class="form-group">
        <label for="meta_desc">Meta Desc</label>
        <textarea name="meta_desc" id="meta_desc" class="form-control" required><%= post.meta_desc %></textarea>  
      </div>

      <div class="form-group">
        <label for="body">Body</label>
